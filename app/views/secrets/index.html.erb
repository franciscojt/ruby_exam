<h1>Below are all the secrets</h1>
<table class="table">
	<thead>
		<tr>
			<th>Secrets</th>
			<th>Likes</th>
			<th>Like/Unlike</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @secrets.each do |secret| %>
			
		<tr>
			<td>
				<%= secret.content %>
				
					
					
			</td>
			<td><%= Secret.find(secret).users_liked.count%> likes</td>
			<td>
			
				<% if secret.users_liked.include?(current_user) %>				
					 <form action="/likes/<%= secret.id %>" method="post">
						<input type="hidden" name="_method" value="delete">
						<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
						<button type="submit" value="Unlike" class="btn btn-danger btn-sm">Unlike</button>
					</form> 
				<% else %>
					<form action="/likes/<%= secret.id %>" method="post">
						<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
						<button type="submit" value="Like" class="btn btn-info btn-sm">Like</button> 
					</form>
				<%end%>
			
				</td>
			
			<% if current_user == secret.user %>
				<td><form action="/secrets/<%= secret.id %>" method="post">
					<input type="hidden" name="_method" value="delete">
					<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
					<button type="submit" value="Delete Account" class="btn btn-danger btn-sm">Delete</button>
				</form></td>
			<% end %>
		</tr>
		<%end%>
	</tbody>
</table>


